<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:alpha="0.8"

    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.HealthProfActivity">

    <ImageView
        android:alpha="0.5"
        android:id="@+id/logo_app"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_r" />

    <Button
        android:id="@+id/fieldAgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edge_button"
        android:text="I am a field agent"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/misAgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edge_button"
        android:text="I am an MIS agent"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/healthProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edge_button"
        android:text="I am health professional"
        android:textColor="@color/white" />

</LinearLayout>